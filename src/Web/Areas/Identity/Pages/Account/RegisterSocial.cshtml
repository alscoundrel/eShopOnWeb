@page
@model RegisterSocialModel
@{
    ViewData["Title"] = "Social Register";
}

<div class="container">

    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <h4>Confirm your details.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.RegisterSocialViewModel.ProviderName"></label>
                    <input asp-for="@Model.RegisterSocialViewModel.ProviderName" class="form-control" readonly="readonly"/>
                    <span asp-validation-for="@Model.RegisterSocialViewModel.ProviderName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.RegisterSocialViewModel.Name"></label>
                    <input asp-for="@Model.RegisterSocialViewModel.Name" class="form-control" readonly="readonly"/>
                    <span asp-validation-for="@Model.RegisterSocialViewModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.RegisterSocialViewModel.Email"></label>
                    <input asp-for="@Model.RegisterSocialViewModel.Email" class="form-control" readonly="readonly"/>
                    <span asp-validation-for="@Model.RegisterSocialViewModel.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">I accept</button>
                <blockquote class="blockquote text-center">
                    <p class="mb-0">We will send you an email to confirm your email address, follow the instructions.</p>
                    <footer class="blockquote-footer">Team <cite title="Source Title">eShopOnWeb</cite></footer>
                </blockquote>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
